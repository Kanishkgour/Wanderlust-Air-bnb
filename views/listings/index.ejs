<% layout('/layout/boilerplate') %>
  <style>
    .filters {
      display: flex;
      flex-wrap: wrap;
      align-items: center;
    }

    .filter {
      text-align: center;
      margin-top: 1.2rem;
      margin-right: 1rem;
      font-size: 0.8rem;
      opacity: 0.7;
      display: flex;
      flex-direction: column;
      justify-content: center;
    }

    .filter-outline {
      display: flex;
      flex-wrap: wrap;
      /* display: flex; */
      flex-direction: row;
      justify-content: center;
      align-items: center;

    }

    .filter:hover {
      opacity: 1;
      text-decoration: underline;
    }

    .filter p {
      font-size: 0.8rem;
      cursor: pointer;
    }

    .tax {
      font-size: 0.8rem;
      display: flex;
      flex-direction: column;
      justify-content: center;
    }

    .tax-info {
      display: none;
    }

    .tax-toggler {
      border: 1px solid black;
      border-radius: 1rem;
      height: 2.35rem;
      padding: 1rem;
      display: flex;
      justify-content: center;
      align-items: center;
    }
  </style>
  <div class="filters  mt-38">
    <div class="filter-outline">
      <div class="filter">
        <div><i class="fa-solid fa-cow"></i></div>
        <p>Farm's</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-snowflake"></i></div>
        <p>Arctic</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-fire"></i></div>
        <p>Trending</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-tent"></i></div>
        <p>Tent</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-tree"></i></div>
        <p>Tree house</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-tower-observation"></i></div>
        <p>Tower</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-bed"></i></div>
        <p>Rooms</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-person-swimming"></i></div>
        <p>Swimming</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-mountain"></i></div>
        <p>Mountain</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-igloo"></i></div>
        <p>Domes</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-ship"></i></div>
        <p>Boats</p>
      </div>
    </div>

    <!-- <div class="ms-auto tax-toggler"> -->
    <div class="form-check form-switch form-check-reverse">
      <input class="form-check-input txt" type="checkbox" id="switchCheckReverse">
      <label class="form-check-label txt" for="switchCheckReverse">Display total after Taxes</label>
    </div>
    <!-- </div> -->

  </div>

  <!-- <h3>All Listings</h3> -->
  <!-- <br /> -->


  <div class="row row-cols-lg-4 row-cols-md-3 row-cols-sm-2">
    <% for (let listings of allListings) { %>
      <a href="/listings/<%= listings._id %>" class="listing-link">
        <div class="card listing-card col">
          <img src="<%= listings.image.url %>" class="card-img-top" style="height: 10rem" alt="listing_img" />

          <div class="card-img-overlay"></div>
          <div class="card-body">
            <p class="card-text">
              <b>
                <%= listings.title %>
              </b>

              <br />
              &#8377; <%= listings.price.toLocaleString("en-In") %> /night
                <i class="tax-info">&nbsp; + 18%GST</i>

            </p>
          </div>
        </div>
      </a>
      <% } %>
        <br />
  </div>



  <script>
    let taxSwitch = document.getElementById("switchCheckReverse")
    taxSwitch.addEventListener("click", () => {
      // console.log(taxSwitch)
      let taxInfo = document.getElementsByClassName("tax-info")
      for (Info of taxInfo) {
        if (Info.style.display != "inline") {
          Info.style.display = "inline"
        } else {
          Info.style.display = "none"
        }
      }
    })
  </script>